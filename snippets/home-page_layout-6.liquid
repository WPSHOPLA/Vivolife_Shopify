{% if settings.layout6_show_block1 and settings.layout6_block1 != '' %}{{ settings.layout6_block1 }}{% endif %}

{% if settings.show_layout6_slider1 %}
<section class="content">
  <div class="container">
    {% if settings.layout6_collection_banner1 != '' %}
    {% include "home-small-slider-2" title: settings.layout6_slidertitle1 name_collection: settings.layout6_slider1 length: settings.layout6_sliderlength1 access: true collection_banner: settings.layout6_collection_banner1 %}
    {% else %}
    <div class="fead-prod">{% include "home-small-slider" title: settings.layout6_slidertitle1 name_collection: settings.layout6_slider1 length: settings.layout6_sliderlength1 access: true %}</div>
    {% endif %}
  </div>
</section>
{% endif %}

{% if settings.show_layout6_slider2 %}
<section class="content">
  <div class="container">
    {% if settings.layout6_collection_banner2 != '' %}
    {% include "home-small-slider-2" title: settings.layout6_slidertitle2 name_collection: settings.layout6_slider2 length: settings.layout6_sliderlength2 access: true collection_banner: settings.layout6_collection_banner2 %}
    {% else %}
    <div class="fead-prod">{% include "home-small-slider" title: settings.layout6_slidertitle2 name_collection: settings.layout6_slider2 length: settings.layout6_sliderlength2 access: true %}</div>
