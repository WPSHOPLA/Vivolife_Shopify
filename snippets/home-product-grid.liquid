{% if access %}

{% if name_collection == blank %}{% assign name_collection = "all" %}{% endif %}{% assign selected_collection = collections[name_collection].products %}
{% assign _lenght = length | plus: 0 %}


<div class="title-box">
  <h2 class="text-center text-uppercase title-under">{{ title }}</h2>
</div>
<!-- /title -->
<div class="product-listing carousel-products-mobile row">
  {% for product in selected_collection limit: _lenght %}
  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 col-xl-3">
    {% include "product-grid-item" hoverzoom: "true" %}
  </div>
  {% endfor %}
</div>


{% endif %}